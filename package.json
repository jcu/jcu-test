		"@babel/preset-react": "^7.0.0",
		"@babel/register": "^7.4.4",
		"autoprefixer": "^9.6.0",
		"babel-loader": "^8.0.6",
		"css-loader": "^3.0.0",
		"file-loader": "^4.0.0",
		"html-webpack-plugin": "^3.2.0",
		"image-webpack-loader": "^5.0.0",
		"lerna": "^3.14.1",
		"node-sass": "^4.12.0",
